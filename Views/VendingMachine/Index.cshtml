@{
    ViewData["Title"] = "Vending Machine";
}

@model VendingMachineModel;

<div class="text-center">
    <h1 class="display-4">Vending Machine</h1>
    @foreach(var moneyUnit in Model.MoneyUnits)
    {
        <div>
            <button class="money-unit-btn" onclick="onMoneyUnitClick(@moneyUnit.Denomination)">
                @moneyUnit.Denomination
            </button>
        </div>
    }
    <div id="balance-display-container">
        @Model.UserBalance
    </div>
</div>

<script type="text/javascript" src="@Url.Content("/js/vending.js")"></script>

